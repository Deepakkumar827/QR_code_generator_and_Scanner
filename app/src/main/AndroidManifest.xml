<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.deepak_kumar_cse.QRCodeScannerAndGenerator">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdminAttendanceApp"
        tools:targetApi="31">
        <activity
            android:name="io.github.deepak_kumar_cse.QRCodeScannerAndGenerator.ui.display.ScanQR"
            android:exported="false" />
        <activity
            android:name="io.github.deepak_kumar_cse.QRCodeScannerAndGenerator.ui.display.CaptureQR"
            android:exported="false" />
        <activity
            android:name="io.github.deepak_kumar_cse.QRCodeScannerAndGenerator.ui.display.QRCodeDisplay2"
            android:exported="false" />
        <activity
            android:name="io.github.deepak_kumar_cse.QRCodeScannerAndGenerator.ui.display.QRCodeDisplay"
            android:exported="false" />
        <activity
            android:name="io.github.deepak_kumar_cse.QRCodeScannerAndGenerator.ui.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>